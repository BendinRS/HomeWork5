# -*- mode: ruby -*-
# vim: set ft=ruby :

MACHINES = {
  :server => {
        :box_name => "centos/7",
        :ip_addr => '192.168.1.1',
  },
  :client => {
        :box_name => "centos/7",
        :ip_addr => '192.168.1.2',
  },
}

Vagrant.configure("2") do |config|
  config.vm.define "server" do |server|
  server.vm.box = "Centos/7"
  config.vm.provision :shell, :path => "nfs_server.sh"
 end

  Vagrant.configure("2") do |config|
  config.vm.define "client" do |client|
  server.vm.box = "Centos/7"
  config.vm.provision :shell, :path => "nfs_client.sh"
 end
